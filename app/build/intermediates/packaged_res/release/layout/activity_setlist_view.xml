<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/setlistNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Setlist Name" />

        <Button
            android:id="@+id/themeBtn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <Button
            android:id="@+id/addSongBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add" />

    </LinearLayout>

    <TextView
        android:id="@+id/songCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 songs"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/playSetlistBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play"
            android:layout_marginRight="4dp" />

        <Button
            android:id="@+id/editSetlistBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/songListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No songs in this setlist.\nTap '+ Add' to add songs."
        android:textSize="16sp"
        android:textColor="#999999"
        android:visibility="gone"
        android:padding="32dp" />

</LinearLayout>
