<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.freesong"
    android:versionCode="4"
    android:versionName="1.3.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme_Light" >
        <activity
            android:name="org.freesong.MainActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
                <data android:pathPattern=".*\\.onsong" />
                <data android:pathPattern=".*\\.chordpro" />
                <data android:pathPattern=".*\\.cho" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.freesong.SongViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme_Light_Fullscreen" />
        <activity
            android:name="org.freesong.SetListsActivity"
            android:label="Setlists" />
        <activity
            android:name="org.freesong.SetListViewActivity"
            android:label="Setlist" />
        <activity
            android:name="org.freesong.SongPickerActivity"
            android:label="Add Songs" />
        <activity
            android:name="org.freesong.FileBrowserActivity"
            android:label="Import" />
        <activity
            android:name="org.freesong.SongEditActivity"
            android:label="Edit Song" />
    </application>

</manifest>