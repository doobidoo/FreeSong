<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme_Light">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/*" />
                <data android:pathPattern=".*\\.onsong" />
                <data android:pathPattern=".*\\.chordpro" />
                <data android:pathPattern=".*\\.cho" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SongViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme_Light_Fullscreen" />

        <activity
            android:name=".SetListsActivity"
            android:label="Setlists" />

        <activity
            android:name=".SetListViewActivity"
            android:label="Setlist" />

        <activity
            android:name=".SongPickerActivity"
            android:label="Add Songs" />

        <activity
            android:name=".FileBrowserActivity"
            android:label="Import" />

        <activity
            android:name=".SongEditActivity"
            android:label="Edit Song" />

    </application>

</manifest>
