<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/editHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Delete"
            android:textColor="#FF5555"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/editTitleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Song"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <Button
            android:id="@+id/themeBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/fontDownBtn"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:text="A-"
            android:textSize="12sp" />

        <Button
            android:id="@+id/fontUpBtn"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:text="A+"
            android:textSize="12sp" />

        <Button
            android:id="@+id/formatBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Above"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <Button
            android:id="@+id/accidentalBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="#/b"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

        <Button
            android:id="@+id/helpBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="?"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Save" />

    </LinearLayout>

    <!-- Editor -->
    <EditText
        android:id="@+id/songEditor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|start"
        android:padding="16dp"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:inputType="textMultiLine|textNoSuggestions"
        android:scrollbars="vertical" />

</LinearLayout>
