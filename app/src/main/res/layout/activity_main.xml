<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FreeSong"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/importBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import"
            android:layout_marginRight="4dp" />

        <Button
            android:id="@+id/themeBtn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/theme_icon"
            android:layout_marginRight="4dp" />

        <Button
            android:id="@+id/setlistsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sets" />

    </LinearLayout>

    <EditText
        android:id="@+id/searchField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search songs..."
        android:inputType="text"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/songCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Song Library"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/songListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/no_songs"
        android:textSize="16sp"
        android:textColor="#999999"
        android:visibility="gone"
        android:padding="32dp" />

</LinearLayout>
